<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/achievementContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Achievement Icon -->
        <TextView
            android:id="@+id/achievementEmoji"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="ðŸ†"
            android:textSize="28sp"
            android:background="@drawable/bg_card" />

        <!-- Achievement Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/achievementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement Title"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/achievementDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Description of the achievement"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/checkbox_on_background"
            android:contentDescription="Status"
            app:tint="@color/correct_green" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
