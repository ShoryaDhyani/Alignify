<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Navigation Bar - Include this in all main activities -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background_light"
    android:elevation="8dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navHomeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/navHomeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/text_secondary_dark"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Exercises -->
    <LinearLayout
        android:id="@+id/navExercises"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navExercisesIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_fitness"
            app:tint="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/navExercisesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercises"
            android:textColor="@color/text_secondary_dark"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Analytics -->
    <LinearLayout
        android:id="@+id/navAnalytics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navAnalyticsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_history"
            app:tint="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/navAnalyticsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:textColor="@color/text_secondary_dark"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Profile/Settings -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navProfileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/navProfileLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/text_secondary_dark"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
